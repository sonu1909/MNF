<UserControl x:Class="MnfPic.ControlAvatar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MnfPic"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Avatar">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ListBox x:Name="listBox" Margin="0,0,0,21"/>
                <local:ControlServer x:Name="controlServer" Grid.Column="1"/>
                <Button x:Name="button" Content="Download All" VerticalAlignment="Bottom" Click="button_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
