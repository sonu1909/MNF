<UserControl x:Class="MnfPic.ControlUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MnfPic"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupBox x:Name="groupBox" Header="User">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ListBox x:Name="listBox"/>
                <local:ControlAvatar x:Name="controlAvatar" Grid.Column="1"/>
            </Grid>
        </GroupBox>
        <Button x:Name="button" Content="Přehlasit" HorizontalAlignment="Right" Margin="0,-1,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
