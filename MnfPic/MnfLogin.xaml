<Window x:Class="MnfPic.MnfLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MnfPic"
        mc:Ignorable="d"
        Title="User login" Height="134.118" Width="300">
    <Grid>
        <Label x:Name="LabelEmail" Content="Email" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TBEmail" Height="23" Margin="109,13,10,0" TextWrapping="Wrap" Text="{Binding Jmeno}" VerticalAlignment="Top"/>
        <TextBox x:Name="TBPass" Height="23" Margin="109,44,10,0" TextWrapping="Wrap" Text="{Binding Heslo}" VerticalAlignment="Top"/>
        <Label x:Name="LabelPass" Content="Password" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" Margin="207,72,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" IsDefault="True"/>

    </Grid>
</Window>
