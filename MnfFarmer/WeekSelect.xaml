<UserControl x:Class="MnfFarmer.WeekSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MnfFarmer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="sp" Grid.Row="1"/>
        <Viewbox HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <CheckBox x:Name="cb" Content="All Days Same"/>
        </Viewbox>
        <Viewbox HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,0,150,0">
            <Label Content="Accuracy [min]" />
        </Viewbox>
        <Viewbox HorizontalAlignment="Right" Width="150">
            <TextBox x:Name="t" Text="10" Width="100"/>
        </Viewbox>
    </Grid>
</UserControl>
